<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="2dp"
    android:background="#FFFFFF"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:clickable="true">

    <TextView
        android:id="@+id/pokedexId"
        android:text="001"
        android:background="@drawable/pokedexId_border"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:layout_alignTop="@+id/pokedexImage"
        android:layout_alignBottom="@+id/pokedexImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="2dp"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/pokedexImage"
        android:src="@drawable/pokedex001"
        android:background="@drawable/pokedexId_border"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/pokedexId"
        android:layout_toRightOf="@+id/pokedexId"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="2dp" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/pokedexImage"
        android:layout_toRightOf="@+id/pokedexImage"
        android:layout_alignTop="@+id/pokedexImage"
        android:id="@+id/tableLayout">

        <TextView
            android:id="@+id/pokedexName"
            android:text="name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold|italic"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp" />

        <TextView
            android:id="@+id/pokedexType1"
            android:text="type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"
            />

        <TextView
            android:id="@+id/pokedexType2"
            android:text="type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pokedexType1"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"/>

    </TableRow>


</RelativeLayout>
